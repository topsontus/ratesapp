<div class="container">
  <div class="row container-fluid justify-content-center bgLogin">
    <div class="d-flex col-md-4 justify-content-center">
      <div class="d-flex align-items-center flex-column justify-content-center">
        <nav class="container-fluid form-border nav-space">
          <div class="d-flex justify-content-center">
            <ul class="navbar-nav">
              <span class="sign-title">Sign In</span>
            </ul>
          </div>
        </nav>
        <%= simple_form_for(resource, as: resource_name,
                            html: {class: 'form-border form-border-padding'},
                            url: session_path(resource_name)) do |f| %>
          <div class="form-group logInput">
            <%= f.input :email,
                        autofocus: true,
                        input_html: { class: 'form-control' },
                        placeholder: 'Email',
                        label: false %>
          </div>
          <div class="form-group logInput">
            <%= f.input :password,
                        input_html: { class: 'form-control' },
                        placeholder: 'Password',
                        label: false %>
          </div>
          <div class="form-group justify-content-center d-flex align-items-center">
            <span><%= alert %></span>
          </div>
          <div class="form-group d-flex justify-content-center flex-column align-items-center m-0">
            <%= f.submit  'Sign in', class: 'btn btn-primary mb-2', style: 'width: 220px' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
